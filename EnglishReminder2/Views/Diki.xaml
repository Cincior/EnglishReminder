        <Label Text="Polecany słownik Diki" FontSize="23" FontAttributes="Bold" TextColor="#ff8700" VerticalTextAlignment="Center"/>
    </Shell.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <WebView Source="https://www.diki.pl/slownik-angielskiego" HeightRequest="1000" WidthRequest="1000"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>